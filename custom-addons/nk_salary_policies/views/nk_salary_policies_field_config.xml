<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_nk_salary_policies_field_config_list" model="ir.ui.view">
            <field name="name">nk.salary.policies.field.config.list</field>
            <field name="model">nk.salary.policies.field.config</field>
            <field name="arch" type="xml">
                <list string="Cấu hình Trường Chính sách Lương" >
                    <field name="display_name" string="Tên hiển thị"/>
                    <field name="excel_name" string="Tên trong Excel"/>
                    <field name="field_type" string="Loại dữ liệu"/>
                    <field name="company_ids" widget="many2many_tags"/>
                    <field name="scope_display"/>
                </list>
            </field>
        </record>

        <record id="view_nk_salary_policies_field_config_form" model="ir.ui.view">
            <field name="name">nk.salary.policies.field.config.form</field>
            <field name="model">nk.salary.policies.field.config</field>
            <field name="arch" type="xml">
                <form string="Cấu hình Trường Chính sách Lương">
                    <sheet>
                        <group>
                            <field name="display_name"/> 
                            <field name="excel_name" readonly="id"/>
                        </group>
                        <group>
                            <field name="field_type" readonly="id"/>

                        </group>
                        <group>
                            <field name="company_ids" 
                                widget="many2many_tags"
                                groups="base.group_system"
                                options="{'no_create': True}"
                                placeholder="Để trống = Global (dùng chung toàn hệ thống)"/>
                            
                            <field name="scope_display" 
                                readonly="1" 
                                widget="badge" 
                                groups="base.group_system"/>
                        </group>
                        <group >
                            <field name="is_materialized" 
                            groups="base.group_system"
                            readonly="1"/>
                        </group>
                        
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_nk_salary_policies_field_config" model="ir.actions.act_window">
            <field name="name">Cấu hình Trường Chính sách Lương</field>
            <field name="res_model">nk.salary.policies.field.config</field>
            <field name="view_mode">list,form</field>
        </record>
        
    </data>
</odoo>