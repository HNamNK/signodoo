<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="nk_salary.NullFloatField">
        <div class="o_field_null_float_wrapper">
            <span 
                t-if="isReadonly" 
                class="o_field_null_float o_field_widget"
                t-att-class="isNull ? 'text-muted fst-italic' : ''"
                t-esc="displayValue"
            />
            
            <input
                t-else=""
                t-ref="numericInput"
                type="text"
                class="o_field_null_float o_input"
                t-att-value="formattedValue"
                t-att-placeholder="isNull ? '---' : ''"
                t-on-focus="onFocus"
                t-on-change="onChange"
                t-on-blur="onBlur"
                t-on-keydown="onKeydown"
            />
        </div>
    </t>
</templates>