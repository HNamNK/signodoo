<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sign_oca_bulk_sign_wizard" model="ir.ui.view">
        <field name="name">sign.oca.bulk.sign.wizard.form</field>
        <field name="model">sign.oca.bulk.sign.wizard</field>
        <field name="arch" type="xml">
            <form string="Bulk Sign" js_class="bulk_sign_wizard_form">
                <sheet>
                    <group>
                        <!-- <field name="request_count" readonly="1"/> -->
                        <field name="signature_name" invisible="1"/>
                        <field name="signature_image" invisible="1"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Ký tất cả" name="action_bulk_sign" type="object"
                            class="btn-primary"/>
                    <button string="Hủy" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sign_oca_bulk_sign_wizard" model="ir.actions.act_window">
        <field name="name">Ký hàng loạt</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sign.oca.bulk.sign.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'active_ids': active_ids}</field>
    </record>
</odoo>