<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_contract_view_form_inherit" model="ir.ui.view">
        <field name="name">hr.contract.form.inherit.salary.policies</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            


            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_batches" 
                        type="object" 
                        class="oe_stat_button" 
                        icon="fa-file-text-o"
                        invisible="batch_count == 0">
                    <field name="batch_count" widget="statinfo" string="Xem Bảng Chính Sách"/>
                </button>
            </xpath>

            <xpath expr="//notebook" position="inside">
                <page string="Chính Sách Lương" name="salary_policies">
                    <group>
                        <group>
                            <field name="salary_policies_html" 
                                   widget="html" 
                                   nolabel="1" 
                                   colspan="2"
                                   readonly="1"/>
                        </group>
                    </group>
                </page>
            </xpath>

        </field>
    </record>

