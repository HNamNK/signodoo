<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_contract_type_view_list_inherit" model="ir.ui.view">
            <field name="name">hr.contract.type.list.inherit</field>
            <field name="model">hr.contract.type</field>
            <field name="inherit_id" ref="hr.hr_contract_type_view_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//list" position="attributes">
                    <attribute name="class">nk_contract_type_custom</attribute>
                </xpath>
                <field name="name" position="before">
                        <field name="duration_months" 
                            string="Tháng Hiệu Lực Hợp Đồng" 
                           />
                </field>
            </field>
        </record>

        <record id="hr_contract_type_act_window" model="ir.actions.act_window">
            <field name="name">Contract Types</field>
            <field name="res_model">hr.contract.type</field>
            <field name="view_mode">list,form</field>
        </record>


    </data>
</odoo>